{
  "name": "pow3r-defender",
  "version": "2025.11.14-production-v4",
  "description": "Pow3r Defender - Advanced defensive cyber fraud investigation platform with Telegram integration",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:production": "wrangler deploy --env production",
    "test": "vitest",
    "test:e2e": "playwright test",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "guardian:check": "npm run guardian:schema && npm run guardian:mock-scan && npm run guardian:test && npm run guardian:config && npm run guardian:law",
    "guardian:schema": "echo 'Schema validation - implement with AJV'",
    "guardian:mock-scan": "grep -rE 'TODO:|placeholder|fakeData|mockData' ./src/ || true",
    "guardian:test": "npm run test:e2e:all",
    "guardian:config": "test -f build.yaml && test -f telegram-bot.yaml",
    "guardian:law": "test -f laws/pow3r.v4.law.md || echo 'Law file not found'",
    "dashboard:dev": "cd dashboard && npm run dev",
    "dashboard:build": "cd dashboard && npm install && npm run build",
    "dashboard:preview": "cd dashboard && npm run preview",
    "test:pow3r-pass": "tsx scripts/test-pow3r-pass-connection.ts",
    "deploy:e2e": "./scripts/deploy-e2e-tests.sh",
    "test:e2e:all": "playwright test --project=chromium --reporter=html,list",
    "test:e2e:migration": "playwright test tests/migration-e2e.spec.ts --project=chromium --reporter=html,list",
    "test:e2e:dashboard": "playwright test tests/dashboard.spec.ts --project=chromium --reporter=html,list",
    "test:guardian": "playwright test tests/guardian-compliance.spec.ts --project=chromium --reporter=html,list",
    "guardian:deploy:loop": "./scripts/guardian-deploy-loop.sh",
    "guardian:monitor": "./scripts/monitor-guardian-tests.sh",
    "verify:media": "tsx scripts/verify-media-generation.ts"
  },
  "keywords": [
    "fraud-detection",
    "cybersecurity",
    "telegram",
    "osint",
    "forensics",
    "xmap",
    "pow3r"
  ],
  "author": "Pow3r Defender Team",
  "license": "PROPRIETARY",
  "dependencies": {
    "@cloudflare/workers-types": "^4.20241106.0",
    "@fingerprintjs/fingerprintjs": "^4.5.0",
    "hono": "^4.6.0",
    "libphonenumber-js": "^1.11.0",
    "marked": "^12.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@types/node": "^20.14.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "tsx": "^4.20.6",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0",
    "wrangler": "^3.78.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
